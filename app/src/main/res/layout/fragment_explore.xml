<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlansFragment">
    <TextView
        android:id="@+id/exploree"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:text="Exlpore"
        android:textSize="35dp"
        android:padding="15dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/stone"/>


    <TextView
        android:layout_width="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:id="@+id/former"
        android:layout_below="@+id/exploree"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Famous Places"/>
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:padding="4dp"
        android:layout_below="@+id/former"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Family-Friends Spots to Explore"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/desc"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />




</RelativeLayout>